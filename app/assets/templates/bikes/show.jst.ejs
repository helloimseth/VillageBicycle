<% if (bike.owner_id === VillageBicycle.currentUserId) { %>
    <button id="edit-bike">Edit Bike</button>

    <button id="delete-bike">Delete Bike</button>
<% } %>

<button id="bike-search">Bike Search</button>

<section class="profile-info group">
  <button class="edit-page">Edit</button>
  <img class="profile-picture"
       src="<%= bike.get('image_url_medium') %>"
       alt="Profile Picture" >

  <article id="profile-info-text">
    <h1><%= bike.escape('name') %> the <%= bike.escape('categoryName') %></h1>
    <h2>Owned by <a href="#"><%= bike.owner().escape('name') %></a></h2>
    <p>
      <%= bike.escape('notes') %>
    </p>

    <h3>Specs</h3>
    <ul>
      <li> Number of Gears:<%= bike.escape('num_gears') %> </li>
      <li> Suggested height: <%= bike.escape('suggestedHeight') %></li>
    </ul>
    <% if (bike.extras.length > 0) { %>
      <h3>Comes with</h3>
      <ul class="extras-list group">
        <% bike.extras.forEach(function (extra) { %>
          <li><%= extra.name %></li>
        <% }); %>
      </ul>
    <% } %>
  </article>

</section>

<ul class="price-list group">
  <li>$<%= bike.escape('hourly_price') %>/hour</li>
  <li>$<%= bike.escape('hourly_price') * 7 %>/day</li>
  <li>$<%= bike.escape('hourly_price') * 30 %>/week</li>
</ul>

<section class="location-section">
  <%= bike.owner().escape('address') %>
  <h2>Find <%= bike.escape('name') %> in <%= bike.escape('neighborhood') %></h2>
  <figure id="map-view">
  </figure>
</section>
